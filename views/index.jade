extends layout

block content
  script.
    var issues = !{issues};

  script(src="/javascripts/jquery-3.3.1.min.js")
  script(src="/javascripts/isotope.pkgd.min.js")
  script(src="/javascripts/issue_filter.js")

  div(class="container")
    div(class="filters", id="filters")
      h3(class="accordion")
        | Ticket Type
        div(class="arrow")
      div(class="accordion-content", filter-type="type")
        label
          input(data-filter=".l1-escalation" type="checkbox")
          | Escalation
        label
          input(data-filter=".patch" type="checkbox")
          | Patch
        label
          input(data-filter=".task" type="checkbox")
          | Task
      h3(class="accordion")
        | Priority
        div(class="arrow")
      div(class="accordion-content", filter-type="priority")
        label
          input(data-filter=".minor" type="checkbox")
          | Minor
        label
          input(data-filter=".major" type="checkbox")
          | Major
        label
          input(data-filter=".critical" type="checkbox")
          | Critical
      h3(class="accordion")
        | Region
        div(class="arrow")
      div(class="accordion-content", filter-type="region")
        label
          input(data-filter=".apac" type="checkbox")
          | APAC
        label
          input(data-filter=".brazil" type="checkbox")
          | Brazil
        label
          input(data-filter=".eu" type="checkbox")
          | EU
        label
          input(data-filter=".india" type="checkbox")
          | India
        label
          input(data-filter=".japan" type="checkbox")
          | Japan
        label
          input(data-filter=".spain" type="checkbox")
          | Spain
        label
          input(data-filter=".us" type="checkbox")
          | US
      h3(class="accordion")
        | Update
        div(class="arrow")
      div(class="accordion-content", filter-type="update")
        label
          input(data-filter=".up-to-date" type="checkbox")
          | Up to Date
        label
          input(data-filter=".update-soon" type="checkbox")
          | Update Soon
        label
          input(data-filter=".needs-update" type="checkbox")
          | Needs Update
      h3(class="accordion")
        | Status
        div(class="arrow")
      div(class="accordion-content", filter-type="status")
        label
          input(data-filter=".blocked" type="checkbox")
          | Blocked
        label
          input(data-filter=".flagged" type="checkbox")
          | Flagged
      h3(class="accordion")
        | Assignee
        div(class="arrow")
      div(class="accordion-content", filter-type="assignee", id="assignee-checkbox-group")
    div(class="selected-filters-container")
      div(class="selected-filters", id="selected-filters")
      div(class="clear-filters", id="clear-filters")
        | Clear All
    div(class="grid", id="grid")